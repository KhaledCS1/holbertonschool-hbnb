graph TB
    subgraph PL[Presentation Layer]
        API[API Endpoints]
        Services[Services]
    end
    
    subgraph FL[Facade Layer]
        Facade[Facade Interface]
    end
    
    subgraph BL[Business Logic Layer]
        User[User Model]
        Place[Place Model]
        Review[Review Model]
        Amenity[Amenity Model]
    end
    
    subgraph DL[Persistence Layer]
        UserRepo[User Repository]
        PlaceRepo[Place Repository]
        ReviewRepo[Review Repository]
        AmenityRepo[Amenity Repository]
        DB[(Database)]
    end
    
    API --> Services
    Services --> Facade
    Facade --> User
    Facade --> Place
    Facade --> Review
    Facade --> Amenity
    
    User --> UserRepo
    Place --> PlaceRepo
    Review --> ReviewRepo
    Amenity --> AmenityRepo
    
    UserRepo --> DB
    PlaceRepo --> DB
    ReviewRepo --> DB
    AmenityRepo --> DB
